<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_180sdp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/_15sdp"
    android:layout_margin="@dimen/_15sdp"
    app:cardElevation="@dimen/_5sdp"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgProductos"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                android:layout_gravity="top|center"
                android:background="@color/shimmerColor"
                android:layout_marginBottom="@dimen/_20sdp"
                tools:ignore="MissingConstraints" />


            <LinearLayout
                android:id="@+id/linearLayout5"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_11dp"
                android:layout_marginTop="16dp"
                android:background="@color/shimmerColor"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/imgProductos"
                app:layout_constraintTop_toBottomOf="@+id/imgProductos"
                tools:ignore="MissingConstraints">

                <ImageView
                    android:layout_width="@dimen/_11dp"
                    android:layout_height="@dimen/_11dp"
                    android:visibility="gone"
                    android:src="@drawable/estrella" />

                <ImageView
                    android:layout_width="@dimen/_11dp"
                    android:layout_height="@dimen/_11dp"
                    android:visibility="gone"
                    android:src="@drawable/estrella" />

                <ImageView
                    android:layout_width="@dimen/_11dp"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    android:src="@drawable/estrella" />
            </LinearLayout>


            <TextView
                android:id="@+id/nameProduct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_5sdp"
                android:background="@color/shimmerColor"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:gravity="center_horizontal"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"
                app:layout_constraintEnd_toEndOf="@+id/imgProductos"
                app:layout_constraintStart_toStartOf="@+id/imgProductos"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout5" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>
</androidx.cardview.widget.CardView>